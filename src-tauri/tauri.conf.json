{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kuboid",
  "version": "0.1.0",
  "identifier": "com.jacksonrakena.kuboid",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "width": 1400,
        "minWidth": 800,
        "height": 750,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../assets/"]
  }
}
